<style is:global>
	:root
	{
		--black: #2e2928;
		--white: #dbd3be;
		--yellow: #f3ae4b;
		--red: #d5361d;
		--blue: #2a878b;

		--white-semi-trans: #dbd3be81;

		--background: var(--black);
		--foreground: var(--white);
		--semi-trans: var(--white-semi-trans);

		--tekst: "Tekst", serif;
		--tekst-mono: "Tekst Mono", monospace;
	}

	@font-face
	{
		font-family: "Tekst";
		src: url('/Tekst-DRoman.woff2') format('woff2'),
			url('/Tekst-DRoman.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: block;
	}

	@font-face
	{
		font-family: "Tekst Mono";
		src: url('/Tekst-MBold.woff2') format('woff2'),
			url('/Tekst-MBold.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: block;
	}

	html, body
	{
		background: var(--background);
		color: var(--foreground);
		margin: 0;

		font-family: var(--tekst);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}

	::selection
	{
		background: var(--yellow);
	}

	.screenreader-only
	{
		position: absolute;
		overflow: hidden;
		width: 1px;
		height: 1px;
		clip: rect(1px 1px 1px 1px);
		clip: rect(1px, 1px, 1px, 1px);
	}
</style>